// -------------------------
// Links
$text-link:								#007DB3;
$text-hover:							#0A5E85;


// Font font-size
$font-size-xxs: 						11px;
$font-size-xs: 							12px;
$font-size-sm: 							13px;
$font-size-md: 							14px;
$font-size-ml: 							15px;
$font-size-lg: 							16px;
$font-size-xl: 							18px;
$font-size-xxl: 						20px;
$font-size-xxxl: 						24px;

$font-size-h1:							36px;

$font-size-h2:							28px;

$font-size-h3:							24px;

$font-size-h4:							18px;

$font-size-h5:							16px;

$font-size-h6:							14px;


// Line Height
$line-height-nospace: 					1;
$line-height-xx-narrow: 				1.1;
$line-height-x-narrow: 					1.14285714;
$line-height-narrow: 					1.28571428;
$line-height-base: 						1.42857143;
$line-height-wide: 						1.57142857;
$line-height-ex-wide: 					1.71428571;


// Font Weight
$font-weight-light: 					300;
$font-weight-regular: 					400;
$font-weight-semibold: 					600;
$font-weight-bold: 						700;
$font-weight-extrabold: 				800;
